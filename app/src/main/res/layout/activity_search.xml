<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white">

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search Location"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="20dp" />

    <!-- Search Type Spinner -->
    <Spinner
        android:id="@+id/spinnerSearchType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="#f5f5f5"
        android:padding="10dp" />

    <!-- Address Input -->
    <EditText
        android:id="@+id/searchAddressInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Address"
        android:padding="12dp"
        android:background="#f5f5f5"
        android:layout_marginBottom="12dp"
        android:inputType="text" />

    <!-- Latitude Input -->
    <EditText
        android:id="@+id/searchLatitudeInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Latitude"
        android:padding="12dp"
        android:background="#f5f5f5"
        android:layout_marginBottom="12dp"
        android:inputType="numberDecimal|numberSigned"
        android:visibility="gone" />

    <!-- Longitude Input -->
    <EditText
        android:id="@+id/searchLongitudeInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Longitude"
        android:padding="12dp"
        android:background="#f5f5f5"
        android:layout_marginBottom="20dp"
        android:inputType="numberDecimal|numberSigned"
        android:visibility="gone" />

    <!-- Result text -->
    <TextView
        android:id="@+id/txtSearchResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Result will appear here"
        android:textSize="14sp"
        android:textColor="#555555"
        android:layout_marginBottom="20dp" />

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancelSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="5dp"
            android:text="Cancel"
            android:textColor="#333333"
            android:backgroundTint="#e0e0e0"
            android:padding="12dp" />

        <Button
            android:id="@+id/btnPerformSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:text="Search"
            android:textColor="@android:color/white"
            android:backgroundTint="#667eea"
            android:padding="12dp" />

    </LinearLayout>

</LinearLayout>
